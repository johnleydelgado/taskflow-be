{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node", 
    "outDir": "dist",             
    "rootDir": ".", 
    "lib": ["ES2020"],                   
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./config.ts"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "api/**/*.ts"
  ],
  "exclude": [
    "src/public/*",
    "node_modules"
  ]
}
