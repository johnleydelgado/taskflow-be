{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],                        
    "strict": true,
    "baseUrl": "./",
    "outDir": "temp",
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
    "config.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "spec",
    "src/public/",
    "eslint.config.ts"
  ]
}
