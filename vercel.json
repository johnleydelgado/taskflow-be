{
  "version": 2,
  "builds": [
    { "src": "api/index.ts","use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "node -r ts-node/register ./scripts/build.ts",
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)",      "dest": "/dist/$1" }
  ]
}
