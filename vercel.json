{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "node -r ts-node/register ./scripts/build.ts",
          "distDir": "dist"
        }
      },
      {
        "src": "dist/api/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/dist/api/index.js" },
      { "src": "/(.*)",      "dest": "/dist/$1" }
    ]
  }
  